<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Sign Up</title>
</head>
<body class="bg-gray-900 text-gray-100 flex items-center justify-center min-h-screen">

  <!-- Error message (if exists) -->
  <% if (locals.error) { %>
    <div class="fixed top-4 w-full max-w-md mx-auto px-4">
      <div class="bg-red-600 text-white px-4 py-3 rounded-lg shadow-lg text-center">
        <%= locals.error %>
      </div>
    </div>
  <% } %>

  <!-- Sign-up card -->
  <div class="bg-gray-800 rounded-2xl shadow-2xl p-8 w-full max-w-md">
    <h3 class="text-3xl font-bold text-center mb-6 text-white">Create Account</h3>

    <form action="/user/signup" method="post" class="space-y-6">

      <!-- Full Name -->
      <div>
        <label class="block text-sm font-medium text-gray-300 mb-1">Full Name</label>
        <input name="fullName" type="text" placeholder="Enter your full name" required
          class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-gray-100
                 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
      </div>

      <!-- Email -->
      <div>
        <label class="block text-sm font-medium text-gray-300 mb-1">Email Address</label>
        <input name="email" type="email" placeholder="Enter your email" required
          class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-gray-100
                 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
      </div>

      <!-- Password -->
      <div>
        <label class="block text-sm font-medium text-gray-300 mb-1">Password</label>
        <input name="password" type="password" placeholder="Enter your password" required
          class="w-full px-4 py-2 rounded-lg bg-gray-700 border border-gray-600 text-gray-100
                 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
      </div>

      <!-- Terms -->
      <div class="flex items-center">
        <input id="terms" type="checkbox" required
          class="h-4 w-4 rounded bg-gray-700 border-gray-600 text-indigo-500 focus:ring-indigo-500">
        <label for="terms" class="ml-2 text-sm text-gray-400">I agree to the terms & conditions</label>
      </div>

      <!-- Submit button -->
      <button type="submit"
        class="w-full py-3 px-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg shadow-md hover:scale-[1.02] transform transition duration-300 focus:outline-none">
        Sign Up
      </button>

      <!-- Divider -->
      <div class="flex items-center justify-center space-x-2">
        <div class="h-px bg-gray-600 w-1/3"></div>
        <span class="text-gray-400 text-sm">or sign up with</span>
        <div class="h-px bg-gray-600 w-1/3"></div>
      </div>

      <!-- Social buttons -->
      <div class="flex space-x-4">
        <button type="button" class="w-1/2 py-2 rounded-lg bg-gray-700 hover:bg-gray-600 transition">Google</button>
        <button type="button" class="w-1/2 py-2 rounded-lg bg-gray-700 hover:bg-gray-600 transition">GitHub</button>
      </div>

      <!-- Sign-in link -->
      <p class="text-center text-sm text-gray-400 mt-4">
        Already have an account? 
        <a href="/user/signin" class="text-indigo-400 hover:text-indigo-300">Sign In</a>
      </p>
    </form>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
