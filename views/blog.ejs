<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <script src="https://cdn.tailwindcss.com"></script>
  <title><%= blog.title %></title>
</head>
<body class="bg-gray-900 text-white">
  <!-- Navbar -->
  <%- include('./partials/navbar') %>

  <!-- Blog Container -->
  <div class="max-w-4xl mx-auto px-4 py-12 ">
    
    <!-- Blog Title -->
    <!-- Blog Title -->
    <h1 class="text-4xl md:text-5xl font-extrabold text-center mt-16 mb-10 
    text-transparent bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 
    bg-clip-text 
    tracking-wide uppercase">
<%= blog.title %>
</h1>


    <!-- Blog Cover -->
    <% if (blog.coverImageURL) { %>
      <img src="<%= blog.coverImageURL %>" alt="Blog Cover" 
           class="w-full h-96 object-cover rounded-2xl shadow-lg mb-8">
    <% } %>

    <!-- Blog Body -->
    <div class="prose prose-lg prose-invert max-w-none mb-10">
      <pre><%= blog.body %></pre>
    </div>

    <!-- Author Section -->
    <div class="flex items-center gap-4 bg-gray-800 rounded-xl p-4 shadow-md mb-12">
      <img src="<%= blog.createdBy.profileImageURL %>" alt="Author" 
           class="w-16 h-16 rounded-full border-2 border-purple-500">
      <div>
        <h3 class="text-lg font-semibold"><%= blog.createdBy.fullName %></h3>
        <p class="text-sm text-gray-400">Author</p>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="bg-gray-800 rounded-2xl p-6 shadow-lg">
      <h2 class="text-2xl font-bold mb-6">Comments (<%= comments.length %>)</h2>
      
      <!-- Add Comment -->
      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="POST" class="flex gap-3 mb-8">
          <input type="text" name="content" id="commentInput"
                 placeholder="Write a comment..."
                 class="flex-1 px-4 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-purple-500 outline-none">
          <button type="submit"
                  class="px-4 py-2 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-lg font-semibold hover:scale-105 transition">
            Add
          </button>
        </form>
      <% } %>

      <!-- Comments List -->
      <div class="space-y-6">
        <% comments.forEach(comment => { %>
          <div class="flex gap-4 bg-gray-700 p-4 rounded-xl hover:bg-gray-600 transition">
            <img src="<%= comment.createdBy.profileImageURL %>" alt="User" 
                 class="w-12 h-12 rounded-full border border-gray-500">
            <div>
              <h4 class="font-semibold text-purple-400"><%= comment.createdBy.fullName %></h4>
              <p class="text-gray-200 mt-1"><%= comment.content %></p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
